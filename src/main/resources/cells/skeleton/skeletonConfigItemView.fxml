<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label id="title" fx:id="itemTitle"  text="Title">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Label>
      <Button id="itemMinusButton" fx:id="itemMinusButton" mnemonicParsing="false" text="-">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Button>
      <Label id="itemValue" fx:id="itemValue" text="0" />
      <Button id="itemPlusButton" fx:id="itemPlusButton" mnemonicParsing="false" text="+">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Button>
      <Button id="itemResetButton" fx:id="itemResetButton" mnemonicParsing="false" text="Reset" />
   </children>
</fx:root>
